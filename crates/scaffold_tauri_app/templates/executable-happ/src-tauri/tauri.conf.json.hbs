{
  "productName": "{{app_name}}",
  "version": "0.0.0",
  "identifier": "{{app_name}}",
  "build": {
    "beforeBuildCommand": "pnpm -F ui build && pnpm happ:build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "{{title_case app_name}}",
        "width": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
